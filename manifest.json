{
    "name": "Clip++",
    "description": "Um melhoramento do clip (website da Universidade NOVA de Lisboa - Faculdade de CiÃªncias e Tecnologia)",
    "version": "1.2.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/clippp16.png",
            "32": "/images/clippp32.png",
            "48": "/images/clippp48.png",
            "128": "/images/clippp128.png"
        }
    },
    "options_page": "options.html",
    "icons": {
        "16": "/images/clippp16.png",
        "32": "/images/clippp32.png",
        "48": "/images/clippp48.png",
        "128": "/images/clippp128.png"
    },
    "web_accessible_resources": [{
        "resources": ["/images/Clippplogo.svg", "/images/clipppmascot.png"],
        "matches": ["https://clip.unl.pt/*", "https://clip.fct.unl.pt/*"]
    }],
    "content_scripts": [{
        "matches": ["https://clip.unl.pt/*", "https://clip.fct.unl.pt/*"],
        "run_at": "document_idle",
        "js": ["clippp.js"],
        "css": ["clippp.css"]
    }]
}
